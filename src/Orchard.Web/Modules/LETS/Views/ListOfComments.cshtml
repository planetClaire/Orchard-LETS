@model IEnumerable<Orchard.Comments.Models.CommentPart>
@using LETS.Helpers
@using Orchard.Utility.Extensions;
<ul class="comments">
@foreach (var comment in Model) {
    <li>
        <article class="comment" id="comment-@comment.Id">
            <header>
                <h4>
                    <span class="who">@Display.CommentAuthor(ContentPart: comment)</span>
                    <span class="when">@Display.CommentMetadata(ContentPart: comment)</span>
                </h4>
            </header>
            @{
                var text = Helpers.Linkify(Html.Encode(comment.Record.CommentText).ReplaceNewLinesWith("<br />"));
            }
            <p class="text">@(new MvcHtmlString(text))</p>
        </article>
    </li>
}
</ul>

