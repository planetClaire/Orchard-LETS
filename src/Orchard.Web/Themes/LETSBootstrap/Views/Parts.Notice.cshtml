@{ 
    var locality = Model.ContentPart.Member.Locality;
}
<div class="member">
    <p class="name">@Html.ActionLink((string)String.Format("{0} {1}", Model.ContentPart.Member.FirstName, Model.ContentPart.Member.LastName), "Index", new { username = Model.ContentPart.Member.User.UserName, area = "Contrib.Profile", Controller = "Home" })</p>
    <p class="locality">@locality</p>
    <p class="email"><a href="mailto:@Model.ContentPart.Member.User.Email">@Model.ContentPart.Member.User.Email</a></p>
    <p class="telephone">@T("Telephone"): <a href="tel:@Model.ContentPart.Member.Telephone">@Model.ContentPart.Member.Telephone</a></p>
    @*@Html.ActionLink(T("More notices from this member").ToString(), "Member", new { id = Model.ContentPart.Member.Id, area = "LETS", Controller = "Notice" })*@
</div>
