@{
    if (!string.IsNullOrEmpty(Model.ContentField.FileNames))
    {
        var fileNames = Model.ContentField.FileNames.Split(';');

        <div id="carouselNoticePhotos" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @{
                    var i = 0;
                    foreach (var fileName in fileNames)
                    {
                        var cssClass = "";
                        if (i == 0)
                        {
                            cssClass += "active";
                        }
                        <li data-target="#carouselNoticePhotos" data-slide-to="@i" class="@cssClass"></li>
                        i++;
                    }
                }
            </ol>
            <div class="carousel-inner">
                @{
                    i = 0;
                    foreach (var fileName in fileNames)
                    {
                        var cssClass = "carousel-item";
                        if (i == 0)
                        {
                            cssClass += " active";
                        }
                        <div class="@cssClass">
                            <img src="@fileName" class="d-block w-100" alt="">
                        </div>
                        i++;
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselNoticePhotos" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselNoticePhotos" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
}